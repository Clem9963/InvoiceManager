{% extends 'base.html.twig' %}

{% block title %}Hello recordController!{% endblock %}

{% block main %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
	Page du dossier :<br> 
	id : {{ record.id }}<br>
	entry date : {{ record.entryDate | date("m/d/Y") }}<br>
	rent : {{ record.rent }}<br>
	fixed charge : {{ record.fixedCharge }}<br>
	periodicity : {{ record.periodicity }}<br>
	revision index : {{ record.revisionIndex }}<br>
	release date : {{ record.releaseDate | date("m/d/Y") }}<br>
	additional Information : {{ record.additionalInformation }}<br>
	tenant : {{ record.tenant.id }}<br>
	local : {{ record.local.name }}<br>
	garant : {{ record.garant.id }}<br>

	Fichier associ√©s : 
    {% for file in files %}
		{{ file }}
    {% endfor %}


</div>
{% endblock %}
