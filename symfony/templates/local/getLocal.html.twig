{% extends 'base.html.twig' %}

{% block title %}Hello localController!{% endblock %}

{% block main %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
	Page du local :<br> 
	id : {{ local.id }}<br>
	nom : {{ local.name }}<br>
	adress : {{ local.address }}<br>
	meublé : {{ local.furnish ? "OUI" : "NON" }}<br>
	Fichier associés : 
    {% for file in files %}
		{{ file }}
    {% endfor %}


</div>
{% endblock %}
