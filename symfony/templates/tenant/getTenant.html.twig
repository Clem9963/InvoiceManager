{% extends 'base.html.twig' %}

{% block css %}
	<!-- Custom styles -->
	<link href="{{ asset('ressources/css/tenant/getTenant.css') }}" rel="stylesheet"/>
{% endblock %}

{% block page_title %}
	<p>Consulation de locataire</p>
{% endblock %}

{% block main %}
	<!-- Card -->
	<div
		class="card">
		<!-- Card image -->
		<div class="view overlay">
			<img class="card-img-top" src="{{ asset('/ressources/img/header-background.png') }}" alt="Card image cap">
		</div>

		<!-- Options buttons -->
		<div class="card-share">

			<div
				class="social-reveal">

				<!-- Modify -->
				<a type="button" class="btn-floating btn-tw mt-0 mx-1">
					<i class="fas fa-pencil-alt"></i>
				</a>
				<!-- Delete -->
				<a type="button" class="btn-floating btn-yt mt-0 mx-1" data-toggle="modal" data-target="#centralModalDanger">
					<i class="fas fa-trash-alt"></i>
				</a>
			</div>

			<!-- Button action -->
			<a class="btn-floating btn-action share-toggle indigo ml-auto mr-4 float-right">
				<i class="fas fa-tools"></i>
			</a>

		</div>

		<!-- Card content -->
		<div
			class="card-body">

			<!-- Title -->
			<h4 class="card-title">{{ tenant.firstname }}
				{{ tenant.name }}</h4>
			<hr>
			<!-- Text -->
			<p class="card-text">
				<i class="fas fa-envelope-open"></i>
				&nbsp;{{ tenant.email }}<br>

				<i class="fas fa-phone"></i>
				&nbsp;{{ tenant.phone }}<br>

				&nbsp;<i class="fas fa-mobile"></i>
				&nbsp;{{ tenant.mobilePhone }}<br>

				<i class="fas fa-home"></i>
				&nbsp;{{ tenant.address }}
			</p>

			<button class="btn btn-indigo btn-rounded btn-md">A venir</button>

		</div>
	</div>
	<!-- Card -->

	<!-- Central Modal Medium Danger -->
	<div class="modal fade" id="centralModalDanger" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div
			class="modal-dialog modal-notify modal-danger" role="document">
			<!--Content-->
			<div
				class="modal-content">
				<!--Header-->
				<div class="modal-header">
					<p class="heading lead">Suppression de locataire</p>

					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true" class="white-text">&times;</span>
					</button>
				</div>

				<!--Body-->
				<div class="modal-body">
					<div class="text-center">
						<i class="fas fa-exclamation-triangle fa-4x mb-3 animated rotateIn"></i>
						<p>Attention, la suppression d'un locataire est définitive et supprimera tous les dossiers associés.<br>En poursuivant, vous acceptez et comprenez les risques.</p>
					</div>
				</div>

				<!--Footer-->
				<div class="modal-footer justify-content-center">
					<a id="delete-tenant-button" type="button" class="btn btn-danger">Confirmer la suppression</a>
					<a type="button" class="btn btn-outline-danger waves-effect" data-dismiss="modal">Annuler l'opération</a>
				</div>
			</div>
			<!--/.Content-->
		</div>
	</div>
	<!-- Central Modal Medium Danger-->

{% endblock %}


{% block js %}
	<!-- Variables obtained by TWIG and transferred to javascript code -->
	<span id='js-passthrough-delete-tenant-url' style="display:none">{{ path('deleteTenant', {'id': tenant.id}) }}</span>
	<span id='js-passthrough-index-url' style="display:none">{{ path('websiteIndex') }}</span>

	<!-- Custom JS scripts -->
	<script type="text/javascript" src="{{ asset('ressources/js/tenant/getTenant.js') }}"></script>
{% endblock %}
