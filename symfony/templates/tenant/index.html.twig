{% extends 'base.html.twig' %}

{% block title %}Hello TenantController!
{% endblock %}

{% block main %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		{% for tenant in tenants %}
			<tr>
				<td>
					<a href="{{ path('getTenant', {'id': tenant.id}) }}">
						{{ tenant.name }}
					</a>
					<br>
				</td>
			</tr>
		{% endfor %}

	</div>
{% endblock %}
